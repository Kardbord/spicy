# @TEST-EXEC:  printf '\377' | spicy-driver %INPUT >output
# @TEST-EXEC:  printf '\377' | spicy-dump %INPUT >>output
# @TEST-EXEC:  btest-diff output

module Test;

public type Foo = unit {
  : bitfield(8) {
    x: 0..3;
    y: 4..7;
  };

  : bitfield(8) {
    z: 0..3;
  } if ( False );

  on %done {
    print self.x, self.y;

    assert self?.x;
    assert self.?x == 15;

    assert ! self?.z;
    assert-exception self.?z;
  }
};
