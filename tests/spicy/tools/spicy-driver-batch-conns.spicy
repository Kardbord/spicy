# @TEST-EXEC: spicyc -d -j -o test.hlto %INPUT
# @TEST-EXEC: HILTI_DEBUG=spicy-driver:libspicy spicy-driver -F test.dat -U test.hlto >output
# @TEST-EXEC: btest-diff output
# @TEST-EXEC: grep -q "^# user_time" .stderr
# @TEST-EXEC: test "$BUILD" = "release" || TEST_DIFF_CANONIFIER=${SCRIPTS}/canonify-spicy-debug btest-diff .stderr
#
# @TEST-DOC: Running spicy-driver in batch mode with the bi-directional connection semantics

module Test;

public type Requests = unit {
    : (Request(self))[];

    var pending: vector<bytes>;
};

public type Replies = unit {
    : Reply[];
};

public type Request = unit(inout reqs: Requests) {
    cmd: /[A-Za-z]+/;
    : b"\n";

    on %done {
        print "req", self.cmd;
        reqs.pending.push_back(self.cmd);
        }
};

public type Reply = unit {
    result: /[0-9]+/;
    : b"\n";

    on %done {
        print "reply", self.result;
    }
};

@TEST-START-FILE test.dat
!spicy-batch v1
@conn-begin cid1 cid1-orig Test::Requests cid1-resp Test::Replies
@data cid1-orig 4
get

@conn-begin cid2 cid2-orig Test::Requests cid2-resp Test::Replies
@data cid1-orig 4
put

@data cid1-orig 4
msg

@data cid1-resp 4
100

@data cid2-orig 4
LST

@data cid1-resp 4
200

@data cid1-orig 4
end

@data cid2-orig 4
CAT

@data cid2-resp 4
555

@data cid1-resp 4
300

@data cid1-resp 4
400

@conn-end cid1
@data cid5-resp 4
666

@conn-end cid2
@TEST-END-FILE
