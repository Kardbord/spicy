# @TEST-EXEC: ${SPICYC} -j -o test.hlto %INPUT
# @TEST-EXEC: printf ok | spicy-driver -c test.hlto >>output
# @TEST-EXEC-FAIL: printf fail | spicy-driver -c test.hlto >>output
# @TEST-EXEC-FAIL: printf okfail | spicy-driver -c test.hlto >>output
# @TEST-EXEC-FAIL: printf failok | spicy-driver -c test.hlto >>output
# @TEST-EXEC-FAIL: printf dunno | spicy-driver -c test.hlto >>output
# @TEST-EXEC: btest-diff output
#
# @TEST-DOC: Test `spicy::confirm()` and `spicy::reject()` through `spicy-driver`.

module Test;

import spicy;

public type Foo = unit {
    on %init { print "---"; }

    : Bar[];
};

type Bar = unit {
    switch {
        -> : b"ok" { print "ok"; spicy::confirm_input(); }
        -> : b"fail" { print "fail"; spicy::reject_input("kaputt"); }
        -> : b"dunno" { print "dunno"; }
    };
};
